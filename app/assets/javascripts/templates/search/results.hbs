{{partial 'search/search'}}
<div class="display_card">
  <div class="card_title">Users</div>
  {{#each user in users}}
    {{render 'search.user_partial' user}}
  {{else}}
    <div class="card-section">
      No results.
    </div>
  {{/each}}
  {{#if more_users}}
    <div class="card-section clickable" {{action 'user_search'}}>
      View all matching users...
    </div>
  {{/if}}
</div>
<div class="display_card">
  <div class="card_title">Tweets</div>
  {{#each tweet in tweets}}
    {{render "stream.post_partial" tweet}}
  {{else}}
    <div class="card-section">
      No results.
    </div>
  {{/each}}
  {{#if more_tweets}}
    <div class="card-section clickable" {{action 'tweet_search'}}>
      View all matching tweets...
    </div>
  {{/if}}
</div>
<div class="display_card">
  <div class="card_title">Forums</div>
  {{#each forum in forums}}
    {{render "forums.meta_partial" forum}}
  {{else}}
    <div class="card-section">
      No results.
    </div>
  {{/each}}
  {{#if more_forums}}
    <div class="card-section clickable" {{action 'forum_search'}}>
      View all matching forums...
    </div>
  {{/if}}
</div>
<div class="display_card">
  <div class="card_title">Your Seamail</div>
  {{#each seamail in seamails}}
    {{render "seamail.meta_partial" seamail}}
  {{else}}
    <div class="card-section">
      No results.
    </div>
  {{/each}}
  {{#if more_seamails}}
    {{#link-to "seamail"}}
      <div class="card-section clickable">
        View all seamail...
      </div>
    {{/link-to}}
  {{/if}}
</div>
